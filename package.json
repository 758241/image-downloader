{
  "private": true,
  "name": "image-downloader",
  "version": "3.0.0",
  "license": "MIT",
  "scripts": {
    "start": "cmless start",
    "build": "cmless build",
    "tsc": "tsc scripts/defaults.ts scripts/send_images.ts",
    "tsc.watch": "tsc scripts/defaults.ts scripts/send_images.ts --watch",
    "test": "jest",
    "test.watch": "jest --watch"
  },
  "dependencies": {
    "@types/chrome": "0.0.65",
    "@types/react": "16.3.14",
    "@types/react-dom": "16.0.5",
    "@types/react-transition-group": "2.0.9",
    "react": "16.3.2",
    "react-dom": "16.3.2",
    "react-transition-group": "2.3.1",
    "tslib": "1.9.0"
  },
  "devDependencies": {
    "@types/jest": "22.2.3",
    "cmless": "0.5.5",
    "jest": "22.4.3",
    "sneer": "0.2.0",
    "ts-jest": "22.4.5",
    "typescript": "2.8.3"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "!coverage/**",
      "!lib/**",
      "!node_modules/**",
      "!**/*.config.ts",
      "!**/*.d.ts",
      "!**/*.test.ts",
      "**/*.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testRegex": "\\.test\\.ts$",
    "transform": {
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  },
  "cmless": {
    "input": "src",
    "template": "${input}/options.html",
    "script": "${input}/options.tsx",
    "style": "${input}/style.ts",
    "serviceWorker": false
  }
}
